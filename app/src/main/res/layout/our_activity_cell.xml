<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityCellContainer"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"

    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/btnCheck"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="CheckBox"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/ic_button_unchecked_24"

            />

        <TextView
            android:id="@+id/tv_ActivityTittle"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/sky_blue"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Tittle" />

        <TextView
            android:id="@+id/tv_startTime"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="20dp"
            android:text="12 : 00"
            android:textColor="@color/sky_blue" />
        <TextView
            android:id="@+id/tv_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="20dp"
            android:text=" -"
            android:textColor="@color/sky_blue" />
        <TextView
            android:id="@+id/tv_endTime"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:text=" 1: 00"
            android:textColor="@color/sky_blue" />



    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="107dp">

        <TextView
            android:id="@+id/tv_Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="55dp"
            android:text="Description"
            android:textColor="@color/sky_blue" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_organize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="80dp"
            android:text="By: "
            android:textColor="@color/sky_blue" />

        <TextView
            android:id="@+id/tv_organizerName"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="80dp"
            android:text="Tan Jin Hao"
            android:textColor="@color/sky_blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_eventStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="80dp"
            android:text="Incomplete"
            android:textColor="#0F0F10"
            android:textStyle="bold" />
    </LinearLayout>



</androidx.cardview.widget.CardView>